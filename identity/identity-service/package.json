    "express-session": "^1.18.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@saflib/monorepo": "*",
    "@saflib/vitest": "*",
